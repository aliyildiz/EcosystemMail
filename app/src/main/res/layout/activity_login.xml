<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="This is gateway to create \n effective connections with \n people and organizations"
            android:textColor="#FF585858" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Ecosystem Mail"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="by Mentornity"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        >

        <Button
            android:id="@+id/linkedin_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/nunito_bold"
            android:onClick="connectLinkedin"
            android:paddingHorizontal="16dp"
            android:text="Connect via Linkedin"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="OR"
            android:layout_below="@id/linkedin_login_btn"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/nunito"
            />
        <Button
            android:id="@+id/browse_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_button"
            android:text="Browse Ecosystem Mails"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/terms_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TERMS OF USE AND \n PRIVACY AGREEMENTS"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito_bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/browse_btn"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2018"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/terms_btn"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>

</LinearLayout>